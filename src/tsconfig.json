{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "es5",
    "module": "es2015",
    "baseUrl": "",
    "types": [],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  //adicionado para preservar os espaços em branco nos templates em build de produção
  "angularCompilerOptions": {
    "preserveWhitespaces": true,
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
